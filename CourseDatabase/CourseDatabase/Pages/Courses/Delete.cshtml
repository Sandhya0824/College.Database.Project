@page
@model CourseDatabase.Pages.Courses.DeleteModel
@{
}

<h1>Delete Course</h1>


<form method="post">
    <input type="hidden" asp-for="courseInfo.CourseId" />

    <p>Are you sure you want to delete this course?</p>

    @if (!string.IsNullOrEmpty(Model.errorMessage))
    {
        <div class="alert alert-danger">
            @Model.errorMessage
        </div>
    }

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Courses/Index" class="btn btn-secondary">Cancel</a>
</form>