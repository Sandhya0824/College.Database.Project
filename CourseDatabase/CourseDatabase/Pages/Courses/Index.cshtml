@page
@model CourseDatabase.Pages.Courses.IndexModel
@{
}

<br />
<h2>List of Courses</h2>
<a class='btn btn-primary btn-sm' href='/Courses/Create'>New Course</a>
<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Duration</th>
            <th>Domain</th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model.courseList)
            {
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.Duration</td>
                    <td>@item.Domain</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Courses/Edit?id=@item.CourseId">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Courses/Delete?id=@item.CourseId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</table>