@page
@model StudentDatabase.Pages.Students.DeleteModel

<h2>Delete Student</h2>

<p>Are you sure you want to delete this student?</p>

<form method="post">
    <input type="hidden" name="regdNo" value="@Model.studentInfo.RegdNo">

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Students/Edit" asp-route-regdNo="@Model.studentInfo.RegdNo" class="btn btn-secondary">Cancel</a>
</form>
