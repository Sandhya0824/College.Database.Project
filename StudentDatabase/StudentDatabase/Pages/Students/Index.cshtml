@page
@model StudentDatabase.Pages.Students.IndexModel
@{
}

<br />
<h1>List Of Students</h1>
<a class="btn btn-primary btn-sm" href="/Students/Create">New Student</a>
<table class="table">
	<thead>
		<tr>
			<th>RegdNo</th>
			<th>Name</th>
			<th>DOB</th>
			<th>Gender</th>
			<th>Address</th>
			<th>CourseId</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.studentList)
		{
			<tr>
				<td>@item.RegdNo</td>
				<td>@item.Name</td>
				<td>@item.DOB</td>
				<td>@item.Gender</td>
				<td>@item.Address</td>
				<td>@item.CourseId</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Students/Edit?id=@item.RegdNo">Edit</a>
					<a class="btn btn-danger btn-sm" href="/Students/Delete?id=@item.RegdNo">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>